@model UserSignUpViewModel

@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Sign Up";
}

<h1>Create Account</h1>

<div class="google-signup-container">
    <partial name="Components/Buttons/_GoogleButton" model="@("Sign Up with Google")" />
</div>

<div class="divider">OR</div>

<div id="signup" class="container">
    <form asp-action="SignUp" asp-controller="Auth" method="post" novalidate>
        <div class="name-container">
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <div class="field-group">
                    <input asp-for="FirstName" />
                    <span asp-validation-for="FirstName"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="LastName"></label>
                <div class="field-group">
                    <input asp-for="LastName" />
                    <span asp-validation-for="LastName"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <div class="field-group">
                <input asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <div class="field-group">
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <div class="field-group">
                <input asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="field-group tac-field-group">
                <input asp-for="TermsAndConditions" />
                <label asp-for="TermsAndConditions">
                    I accept the <span class="tac-modal-trigger">Terms and Conditions</span>
                </label>
                <span asp-validation-for="TermsAndConditions"></span>
            </div>
        </div>

        <partial name="Components/_FormAlert" />

        <div class="submit-button-container" style="display: contents">
            <partial name="Components/Buttons/_BaseButton" model="@( new ButtonModel { Title = "Create Account", Type = "submit" } )" />
        </div>
    </form>
</div>

<div class="login-redirect">
    <span>Already have an account? <a asp-controller="Auth" asp-action="SignIn">Login</a></span>
</div>