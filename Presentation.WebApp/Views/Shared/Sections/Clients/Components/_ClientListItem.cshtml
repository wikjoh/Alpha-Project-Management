@model ClientModel

@if (Model != null && Model.ClientAddress != null)
{
    <tr>
        <td class="client-info">
            <div class="image-container">
                @if (Model.ImageURI != null)
                {
                    <img class="client-image" src="@Model.ImageURI" alt="" />
                }
            </div>
            <div class="client-name">@Model.Name</div>
            <div class="client-email">@Model.Email</div>
        </td>
        <td class="client-location">@Model.ClientAddress.City, @Model.ClientAddress.Country</td>
        <td class="client-phone">@Model.PhoneNumber</td>
        <td class="client-date">@Model.Created</td>
        <td class="client-status">
            <div class="client-status-container">
                @(Model.IsActive ? "active" : "inactive")
            </div>
        </td>
        <td class="client-actions">
            <img class="client-actions-dots" src="~/images/icons/more-dots.svg" data-modal="true" data-target="#editClientModal" data-client-id="@Model.Id" />
        </td>
    </tr>
}
