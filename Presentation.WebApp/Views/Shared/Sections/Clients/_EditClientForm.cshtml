@using Presentation.WebApp.Models.Client
@using Presentation.WebApp.Models.Components
@model EditClientViewModel

<div id="editClientModal" class="modal">
    <div class="modal-content">

        <div class="modal-header">
            <h3>Edit Client</h3>
            <button class="btn-close" data-close="true">X</button>
        </div>

        <form class="ajax" novalidate method="post" asp-action="EditClient" asp-controller="Admin">
            <div class="image-previewer circle">
                <img src="" class="image-preview" />
                <input asp-for="ClientImage" accept="image/*" class="hide" />
            </div>

            <input asp-for="Id" readonly type="hidden" />
            <input asp-for="IsActive" readonly type="hidden" />


            <div class="form-group">
                <label asp-for="Name">Name</label>
                <div class="field-group">
                    <input asp-for="Name" />
                    <span asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <div class="field-group">
                    <input asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber">Phone</label>
                <div class="field-group">
                    <input asp-for="PhoneNumber" />
                    <span asp-validation-for="PhoneNumber"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ClientAddress.StreetAddress">Street Address</label>
                <div class="field-group">
                    <input asp-for="ClientAddress.StreetAddress" />
                    <span asp-validation-for="ClientAddress.StreetAddress"></span>
                </div>
            </div>

            <div class="city-postalcode-container">
                <div class="form-group">
                    <label asp-for="ClientAddress.PostalCode">Postal Code</label>
                    <div class="field-group">
                        <input asp-for="ClientAddress.PostalCode" />
                        <span asp-validation-for="ClientAddress.PostalCode"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="ClientAddress.City">City</label>
                    <div class="field-group">
                        <input asp-for="ClientAddress.City" />
                        <span asp-validation-for="ClientAddress.City"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ClientAddress.Country">Country</label>
                <div class="field-group">
                    <input asp-for="ClientAddress.Country" />
                    <span asp-validation-for="ClientAddress.Country"></span>
                </div>
            </div>

            <div class="submit-button-container" style="display: contents">
                <partial name="Components/Buttons/_BaseButton" model="@( new ButtonModel { Title = "Update", Type = "submit" } )" />
            </div>
        </form>
    </div>
</div>