<div id="settings-container">
    <button type="button" data-type="dropdown" data-target="#settings-dropdown" class="button-settings">
        <img src="@Url.Content("~/images/icons/cogwheel.svg")" />
    </button>

    <div id="settings-dropdown" class="dropdown">
        <div class="dropdown-header">
            <div class="img-container">
                <img src="@Url.Content("~/images/icons/usersquare.jpg")" />
            </div>
            <h6 class="name">Wiktor Johnsson</h6>
        </div>

        <div class="darkmode item">
            <label class="item-left darkmode-label" for="darkmode-toggle">
                <img src="@Url.Content("~/images/icons/cogwheel.svg")" />
                <span class="title">Dark Mode</span>
            </label>
            <label class="darkmode-switch">
                <input type="checkbox" id="darkmode-toggle" data-type="toggle" data-func="darkmode" />
                <span class="slider"></span>
            </label>
        </div>
        <div class="divider"></div>
        <div class="item">
            <div class="item-left" style="display: contents">
                <a asp-controller="" asp-action="">
                    <img src="@Url.Content("~/images/icons/logout.svg")" />
                    <span class="title">Logout</span>
                </a>
            </div>
        </div>
    </div>
</div>
